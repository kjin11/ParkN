<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/BluePurpul"
                app:navigationIcon="@drawable/btn_back"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Details"
                app:titleTextColor="#FFFFFF">

            </android.support.v7.widget.Toolbar>

            <ScrollView
                android:id="@+id/scroll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_detail1"
                android:layout_above="@+id/book_sheet_detail"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:paddingLeft="15dp"
                            android:src="@drawable/icon_car_selected"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="502 Fifth Ave"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.5 mi"
                                android:textColor="@color/BluePurpul"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_time"/>
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text=" From"
                            android:textColor="@color/BluePurpul"/>
                        <Button
                            android:id="@+id/start_date_btn_detail"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:hint="2018 3-5 10:30 "
                            android:background="@drawable/background_white"/>

                        <TextView
                            android:layout_width="20dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text=" To"

                            android:textColor="@color/BluePurpul"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_amenities"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Amentities"
                            android:textColor="@color/BluePurpul"/>
                        <Button
                            android:id="@+id/amenity_btn_detail"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:hint="   Garage-covered  "
                            android:background="@drawable/background_white"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/detail_picture_example"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_notice"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Notice"
                            android:textColor="@color/BluePurpul"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:singleLine="false"
                        android:text="Today is available between 10 AM  to 5PM"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:singleLine="false"
                        android:text="The maximum size of the vehicles allowed is 80'' tall and 190 length. Please call me if you want to reserver for a long term"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:singleLine="false"
                        android:text="The maximum size of the vehicles allowed is 80'' tall and 190 length. Please call me if you want to reserver for a long term"
                        android:textColor="#000000"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:singleLine="false"
                        android:text="My phone number is 412-641-0943"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:singleLine="false"
                        android:text="The maximum size of the vehicles allowed is 80'' tall and 190 length. Please call me if you want to reserver for a long term"
                        android:textColor="#000000"/>


                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/book_sheet_detail"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_bottom"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="$10 / 3hr"
                    android:textColor="@color/BluePurpul"
                    android:textSize="30dp"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    />
                <Button
                    android:id="@+id/book_btn_detail"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"

                    android:background="@drawable/btn_book"/>

                <Button
                    android:id="@+id/end_date_btn_detail"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/book_btn_detail"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/book_btn_detail"
                    android:layout_marginBottom="230dp"
                    android:background="@drawable/background_white"
                    android:hint="2018 3-5 15:30" />
            </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>